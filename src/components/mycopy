/* Styling the navbar inside the navbar */
.Nav {
    display: none;
    /* Hide the navbar by default */

    /* Add other styles for the navbar */
    background-image: linear-gradient(to right, #DB935C, #DB935C);
    overflow: hidden;
    max-height: 150rem;
    height: 10%;
}

/* Styling the links inside the navbar */
.Nav a {
    margin-left: 10px;
    float: left;
    display: block;
    color: white;
    text-align: center;
    padding: 15px;
    text-decoration: none;
    font-size: 20px;
    font-weight: bolder;
}

.Nav a:hover {
    background-color: #ddd;
    color: black;
}


/* Show the navbar only on mobile devices smaller than 768px */
@media only screen and (max-width: 768px) {
    .Nav {
        display: block;
        /* Show the navbar on mobile devices */
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        z-index: 1000;
        /* Set a high z-index to place the navbar on top */
    }
}